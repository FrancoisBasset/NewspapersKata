{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "sourceMap": true,
    "target": "es6",
    "outDir": ".build",
    "moduleResolution": "node",
    "baseUrl": "./",
    "rootDir": "./",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "@types/node",
      "@types/jest"
    ]
  },
}